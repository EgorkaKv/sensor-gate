# SensorGate Configuration
# Copy this file to .env and update the values

# Application Settings
SENSORGATE_APP_NAME=SensorGate
SENSORGATE_APP_VERSION=0.1.0
SENSORGATE_DEBUG=false
SENSORGATE_HOST=0.0.0.0
SENSORGATE_PORT=8000

# API Security - Comma-separated list of valid API keys
SENSORGATE_API_KEYS=your-api-key-1,your-api-key-2,dev-key-123
SENSORGATE_PUBLIC_ACCESS_ENABLED=false

# Google Cloud Pub/Sub Settings
SENSORGATE_GCP_PROJECT_ID=your-gcp-project-id
SENSORGATE_GCP_CREDENTIALS_PATH=/path/to/your/service-account-key.json

# Pub/Sub Topic Configuration
SENSORGATE_PUBSUB_TOPIC_TEMPERATURE=sensor-temperature
SENSORGATE_PUBSUB_TOPIC_HUMIDITY=sensor-humidity
SENSORGATE_PUBSUB_TOPIC_NDIR=sensor-ndir

# Pub/Sub Client Settings
SENSORGATE_PUBSUB_TIMEOUT=30.0
SENSORGATE_PUBSUB_RETRY_ATTEMPTS=3
SENSORGATE_PUBSUB_RETRY_DELAY=1.0

# Circuit Breaker Settings
SENSORGATE_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
SENSORGATE_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Pub/Sub Mock Settings (for local development)
SENSORGATE_USE_PUBSUB_MOCK=false
SENSORGATE_PUBSUB_MOCK_AUTO_ENABLE=true

# InfluxDB Settings
SENSORGATE_INFLUXDB_URL=https://us-east-1-1.aws.cloud2.influxdata.com
SENSORGATE_INFLUXDB_TOKEN=your-influxdb-api-token
SENSORGATE_INFLUXDB_ORG=your-influxdb-org
SENSORGATE_INFLUXDB_BUCKET=iot-sensors
SENSORGATE_INFLUXDB_USERNAME=your-username
SENSORGATE_INFLUXDB_PASSWORD=your-password
SENSORGATE_INFLUXDB_TIMEOUT=30000

# Logging Configuration
SENSORGATE_LOG_LEVEL=INFO
SENSORGATE_LOG_FORMAT=json

# Metrics Configuration
SENSORGATE_METRICS_ENABLED=true
SENSORGATE_METRICS_PATH=/metrics
